<div class="user-profile"></div>

<!-- <div class="row"> -->
<% albums.each(function(album) { %>
  <a href="#albums/<%= album.id %>" class="album-container"
    data-album-id="<%= album.id %>">
    <img src="<%= album.get('cover_photo').url %>"
      class="album-cover-photo">
    <p class="album-name"><%= album.escape('name') %></p>
    <p class="album-photo-count"># photos</p>
    <span class="album-delete-icon glyphicon glyphicon-remove"
      data-toggle="modal" data-target="#confirm-delete">
    </span>
  </a>
<% }) %>

<div class="album-container albums-new-album">
  <p id="new-album-plus">+</p>
  <p id="new-album-description">Add New Album</p>
</div>



<!-- Modal -->
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this album?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="delete-album-confirm btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>